{{> _header}}

<article class="site-body page-login">
    <h1>{{#i18n}}login.title{{/i18n}}</h1>
    <form method="post" action="{{formAction}}">
        <p>
            <label for="email">{{#i18n}}form.email.label{{/i18n}}</label><input id="email" type="email" name="email" required="required" placeholder="my.name@domain.tld" autofocus="autofocus"/>
        </p>
        <p>
            <label for="password">{{#i18n}}form.password.label{{/i18n}}</label><input id="password" type="password" name="password" required="required" placeholder=""/>
        </p>
        <p>
            <a class="recoverPassword" href="{{#link}}forgotPassword{{/link}}">{{#i18n}}button.forgotPassword{{/i18n}}</a>
        </p>
        <p class="form-buttons">
            <input type="submit" name="signin" value="{{#i18n}}button.login{{/i18n}}"/>
            <input type="submit" name="signup" value="{{#i18n}}button.register{{/i18n}}" class="register"/>
        </p>
    </form>
</article>

{{> _footer}}
