{{> _header}}

<article class="site-body page-issues">
    <h1>{{#i18n}}issues.title{{/i18n}}</h1>

    <aside>
        <p><a class="button" href="{{#link}}issue.create{{/link}}">{{#i18n}}button.createIssue{{/i18n}}</a></p>

        <section>
            <h1>Filter</h1>
        </section>

        <section>
            <h1>Order</h1>
        </section>

        <section>
            <h1>Options</h1>
        </section>
    </aside>

    <table>
        <thead>
            <tr>
                <th>{{#i18n}}issue.id.label{{/i18n}}</th>
                <th>{{#i18n}}issue.name.label{{/i18n}}</th>
                <th>{{#i18n}}issue.assignedTo.label{{/i18n}}</th>
                <th>{{#i18n}}issue.progression.label{{/i18n}}</th>
                <th>{{#i18n}}issue.status.label{{/i18n}}</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td>{{#i18n}}issue.id.label{{/i18n}}</td>
                <td>{{#i18n}}issue.name.label{{/i18n}}</td>
                <td>{{#i18n}}issue.assignedTo.label{{/i18n}}</td>
                <td>{{#i18n}}issue.progression.label{{/i18n}}</td>
                <td>{{#i18n}}issue.status.label{{/i18n}}</td>
            </tr>
        </tfoot>
        <tbody>
        {{#issues}}
            <tr>
                <td><a href="{{#link}}issue,id:{{id}}{{/link}}">#{{id}}</a></td>
                <td><a href="{{#link}}issue,id:{{id}}{{/link}}">{{name}}</a></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        {{/issues}}
        </tbody>
    </table>
</article>

{{> _footer}}
