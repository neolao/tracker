{
    // Home page
    "home":
    {
        "pattern"   : "/",
        "controller": "home",
        "action"    : "index"
    },

    // Login page
    "login":
    {
        "pattern"   : "/login",
        "controller": "auth",
        "action"    : "login"
    },
    "register.confirmation":
    {
        "pattern"   : "/register/confirmation/:id/:hash",
        "controller": "auth",
        "action"    : "registerConfirmation"
    },
    "password.recover":
    {
        "pattern"   : "/password/recover",
        "controller": "auth",
        "action"    : "recoverPassword"
    },
    "password.change":
    {
        "pattern"   : "/password/change/:id/:hash",
        "controller": "auth",
        "action"    : "changePassword"
    },

    // Logout action
    "logout":
    {
        "pattern"   : "/logout",
        "controller": "auth",
        "action"    : "logout"
    },

    // Profile
    "profile":
    {
        "pattern"   : "/account/profile",
        "controller": "account",
        "action"    : "profile"
    },
    "profile.edit":
    {
        "pattern"   : "/account/profile/edit",
        "controller": "account",
        "action"    : "editProfile"
    },

    // Projects
    "projects":
    {
        "pattern"   : "/projects",
        "controller": "project",
        "action"    : "all"
    },
    "project.create":
    {
        "pattern"   : "/project/create",
        "controller": "project",
        "action"    : "create"
    },
    "project.edit":
    {
        "pattern"   : "/project/:id/edit",
        "controller": "project",
        "action"    : "edit"
    },
    "project":
    {
        "pattern"   : "/project/:codeName",
        "controller": "project",
        "action"    : "sheetByCodeName"
    },

    // Milestones
    "milestones":
    {
        "pattern"   : "/milestones",
        "controller": "milestone",
        "action"    : "all"
    },

    // Issues
    "issues":
    {
        "pattern"   : "/issues",
        "controller": "issue",
        "action"    : "all"
    },
    "issue.create":
    {
        "pattern"   : "/issue/create",
        "controller": "issue",
        "action"    : "create"
    },
    "issue.edit":
    {
        "pattern"   : "/issue/:id/edit",
        "controller": "issue",
        "action"    : "edit"
    },
    "issue":
    {
        "pattern"   : "/issue/:id",
        "controller": "issue",
        "action"    : "sheet"
    },



    // Default action
    "default":
    {
        "controller": "error",
        "action"    : "http404"
    }
}
