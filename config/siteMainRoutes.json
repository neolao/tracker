{
    "home":
    {
        "pattern"   : "/^\\\/$/",
        "controller": "home",
        "action"    : "index",
        "reverse"   : "/"
    },

    "login":
    {
        "pattern"   : "/^\\\/login$/",
        "controller": "auth",
        "action"    : "login",
        "reverse"   : "/login"
    },

    "logout":
    {
        "pattern"   : "/^\\\/logout$/",
        "controller": "auth",
        "action"    : "logout",
        "reverse"   : "/logout"
    },

    "default":
    {
        "controller": "error",
        "action"    : "http404"
    }
}
