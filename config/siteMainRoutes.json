{
    // Home page
    "home":
    {
        "pattern"   : "/^\\\/$/",
        "controller": "home",
        "action"    : "index",
        "reverse"   : "/"
    },

    // Login page
    "login":
    {
        "pattern"   : "/^\\\/login$/",
        "controller": "auth",
        "action"    : "login",
        "reverse"   : "/login"
    },

    // Logout action
    "logout":
    {
        "pattern"   : "/^\\\/logout$/",
        "controller": "auth",
        "action"    : "logout",
        "reverse"   : "/logout"
    },

    // Profile
    "profile":
    {
        "pattern"   : "/^\\\/account\\\/profile$/",
        "controller": "account",
        "action"    : "profile",
        "reverse"   : "/account/profile"
    },

    // Default action
    "default":
    {
        "controller": "error",
        "action"    : "http404"
    }
}
